@page
@model SessionModel
@{
    ViewData["Title"] = "Sandor's Super Planning Poker";
}

<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
        <div id="countdownContainer" class="hidden fixed top-0 left-0 right-0 z-50 p-4">
            <div class="max-w-7xl mx-auto">
                <div class="glassmorphism rounded-xl p-4">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="w-16 h-16 rounded-full bg-gradient-to-r from-amber-500 to-orange-500 flex items-center justify-center">
                            <span id="countdownNumber" class="text-2xl font-bold text-white">3</span>
                        </div>
                    </div>
                    <div class="flex-grow">
                        <div class="text-white font-semibold mb-2">Stemmen worden onthuld in</div>
                        <div class="bg-white/20 rounded-full h-3 overflow-hidden">
                            <div id="countdownProgress" class="h-full bg-gradient-to-r from-amber-400 to-orange-500 rounded-full transition-all duration-1000" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 pt-4">
            <div class="flex items-center gap-4">
                <img src="~/img/logo.png" alt="Planning Poker Logo" class="w-12 h-12 drop-shadow-lg">
                <div>
                    <h1 class="text-3xl md:text-4xl font-bold text-white mb-2 tracking-tight">Sandor's Super Planning Poker 9000&reg;</h1>
                    <div class="flex items-center gap-3">
                        <span class="text-white/80 font-medium">Sessie:</span>
                        <code id="sessionId" class="bg-white/10 backdrop-blur-lg px-4 py-1.5 rounded-lg text-white font-mono font-semibold cursor-pointer hover:bg-white/15 transition-all border border-white/20"
                              onclick="copyToClipboard(this.textContent)">@Model.SessionId</code>
                        <button onclick="copyToClipboard('@Model.SessionId')" class="text-white/60 hover:text-white transition-colors p-1 rounded-lg hover:bg-white/10">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-2 bg-white/10 backdrop-blur-lg rounded-xl px-4 py-2 border border-white/20">
                <div id="participantsContainer" class="flex -space-x-2"></div>
                <span class="text-white/80 text-sm font-medium ml-2"><span id="participantCount">0</span> deelnemers</span>
            </div>
        </header>

        <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 space-y-6">
                <div class="glassmorphism rounded-2xl p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-white tracking-tight">Huidige Story</h2>
                        <div id="hideStoryToggleContainer" class="flex items-center gap-2 hidden">
                            <span class="text-white/80 text-sm">Verbergen</span>
                            <div class="relative inline-block w-10 h-5 transition-colors duration-200">
                                <input type="checkbox" id="hideStoryToggle" class="peer">
                                <div class="block w-10 h-5 bg-slate-400 rounded-full peer-checked:bg-indigo-500 transition-colors duration-200 pointer-events-none"></div>
                                <div class="dot absolute left-0.5 top-0.5 bg-white w-4 h-4 rounded-full transition-all duration-200 peer-checked:translate-x-5 pointer-events-none"></div>
                            </div>
                        </div>
                    </div>
                    <div id="storyContent">
                        <div id="storyDisplay" class="bg-white rounded-xl p-6 mb-4 shadow-lg">
                            <h3 id="currentStoryTitle" class="text-2xl font-bold text-slate-900 mb-2 tracking-tight">Geen story</h3>
                            <p id="currentStoryDescription" class="text-slate-600 leading-relaxed"></p>
                        </div>

                        <div id="storyInputs" class="space-y-4 hidden">
                                <div>
                                    <label class="block text-white/90 text-sm font-semibold mb-2">Story titel</label>
                                    <input type="text" id="storyTitleInput" placeholder="Bijv. Gebruikerslogin implementeren"
                                        class="w-full px-4 py-3 rounded-xl bg-white/10 backdrop-blur-lg border border-white/20 text-white placeholder-white/50 focus:bg-white/15 focus:border-indigo-400 transition-all">
                                </div>
                                <div>
                                    <label class="block text-white/90 text-sm font-semibold mb-2">Beschrijving</label>
                                    <textarea id="storyDescriptionInput" rows="3" placeholder="Korte beschrijving van de story..."
                                        class="w-full px-4 py-3 rounded-xl bg-white/10 backdrop-blur-lg border border-white/20 text-white placeholder-white/50 focus:bg-white/15 focus:border-indigo-400 transition-all resize-none"></textarea>
                                </div>
                                <button id="setStoryBtn"
                                    class="w-full bg-gradient-to-r from-indigo-500 to-violet-600 text-white font-semibold py-3 px-6 rounded-xl hover:from-indigo-600 hover:to-violet-700 transform hover:scale-105 transition-all shadow-2xl">
                                    Story instellen
                                </button>
                            </div>
                    </div>
                </div>

                <div class="glassmorphism rounded-2xl p-6">
                    <div id="autoRevealIndicator" class="hidden items-center gap-2 px-4 py-2 bg-emerald-500/20 border border-emerald-500/30 rounded-lg mb-4">
                        <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-6v5zM5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3-3m6 3l3-3"></path>
                        </svg>
                        <span class="text-emerald-400 text-sm font-medium">Automatisch onthullen ingeschakeld</span>
                    </div>

                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-white tracking-tight">Kies een kaart</h2>
                        <div class="text-right text-sm font-medium space-y-1">
                            <div class="text-emerald-200">
                                Gestemd: <span id="votedParticipants" class="text-white/90">Niemand</span>
                            </div>
                            <div class="text-amber-200">
                                Nog niet: <span id="pendingParticipants" class="text-white/90">Niemand</span>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white/15 rounded-full h-2.5 mb-6 overflow-hidden">
                        <div id="votingProgress" class="progress-bar bg-gradient-to-r from-indigo-400 to-violet-500 h-full rounded-full" style="width: 0%"></div>
                    </div>

                    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-3">
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="0">
                            <div class="text-4xl font-bold text-slate-900">0</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="½">
                            <div class="text-4xl font-bold text-slate-900">½</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="1">
                            <div class="text-4xl font-bold text-slate-900">1</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="2">
                            <div class="text-4xl font-bold text-slate-900">2</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="3">
                            <div class="text-4xl font-bold text-slate-900">3</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="5">
                            <div class="text-4xl font-bold text-slate-900">5</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="8">
                            <div class="text-4xl font-bold text-slate-900">8</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="13">
                            <div class="text-4xl font-bold text-slate-900">13</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="20">
                            <div class="text-4xl font-bold text-slate-900">20</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="40">
                            <div class="text-4xl font-bold text-slate-900">40</div>
                        </div>
                        <div class="poker-card bg-white rounded-xl p-4 cursor-pointer border-2 border-transparent hover:border-indigo-300 shadow-lg text-center" data-value="100">
                            <div class="text-4xl font-bold text-slate-900">100</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div id="facilitatorControls" class="glassmorphism rounded-2xl p-6 hidden">
                    <h2 class="text-xl font-bold text-white mb-4 tracking-tight">Facilitator Controls</h2>

                                <div class="flex items-center justify-between mb-6">
                                    <div class="flex items-center gap-3">
                                        <span class="text-white/80 font-medium text-sm">Auto-onthullen</span>
                                        <div class="relative inline-block w-12 h-6 transition-colors duration-200">
                                            <input type="checkbox" id="autoRevealToggle"
                                                   class="peer"
                                                   @(Model.AutoRevealVotes ? "checked" : "")>
                                            <div class="block w-12 h-6 bg-slate-400 rounded-full peer-checked:bg-emerald-500 transition-colors duration-200 pointer-events-none"></div>
                                            <div class="dot absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-all duration-200 peer-checked:translate-x-6 pointer-events-none"></div>
                                        </div>
                                    </div>
                                </div>

                        <div class="space-y-3">
                            <button id="revealVotesBtn"
                                class="w-full bg-gradient-to-r from-emerald-500 to-emerald-600 text-white font-semibold py-3 px-6 rounded-xl hover:from-emerald-600 hover:to-emerald-700 transform hover:scale-105 transition-all shadow-2xl">
                                Toon stemmen
                            </button>
                            <button id="resetVotingBtn"
                                class="w-full bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold py-3 px-6 rounded-xl hover:from-amber-600 hover:to-orange-600 transform hover:scale-105 transition-all shadow-2xl">
                                Nieuwe ronde
                            </button>
                        </div>
                    </div>
                }

                <div class="glassmorphism rounded-2xl p-6">
                    <h2 class="text-xl font-bold text-white mb-4 tracking-tight">Resultaten</h2>
                    <div id="votesContainer" class="grid grid-cols-2 gap-3">
                        <div class="text-white/60 text-center py-8 col-span-2">
                            Nog geen stemmen
                        </div>
                    </div>
                </div>

                <div class="glassmorphism rounded-2xl p-6">
                    <h2 class="text-xl font-bold text-white mb-4 tracking-tight">Vorige rondes</h2>
                    <div id="previousRoundsContainer" class="space-y-4">
                        <div class="text-white/60 text-center py-6">
                            Nog geen resultaten
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/session.js"></script>
}
