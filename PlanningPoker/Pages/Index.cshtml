@page
@model IndexModel
@{
    ViewData["Title"] = "Sandor's Super Planning Poker";
}

<div class="min-h-screen flex flex-col items-center justify-center p-4 md:p-12">

    <div class="mb-8 text-center">
        <img src="~/img/logo.png" alt="Planning Poker Logo" class="w-32 h-32 md:w-48 md:h-48 mx-auto mb-4 drop-shadow-2xl">
    </div>

    <div class="w-full max-w-6xl grid md:grid-cols-2 gap-6 md:gap-8">

        <div class="glassmorphism rounded-2xl p-6 md:p-8 card-hover">
            <div class="mb-6">
                <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">Nieuwe sessie</h1>
                <p class="text-white/80 leading-relaxed">Start een nieuwe Planning Poker sessie en nodig je team uit</p>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-white/90 text-sm font-semibold mb-2">Je naam</label>
                    <input type="text" id="createUserNameInput" placeholder="Bijv. Jan de Vries"
                        class="w-full px-4 py-3 rounded-xl bg-white/10 backdrop-blur-lg border border-white/20 text-white placeholder-white/50 focus:bg-white/15 focus:border-indigo-400 transition-all">
                </div>

                <button id="createSessionBtn"
                    class="w-full bg-gradient-to-r from-indigo-500 to-violet-600 text-white font-semibold py-4 px-6 rounded-xl hover:from-indigo-600 hover:to-violet-700 transform hover:scale-105 transition-all shadow-2xl">
                    Nieuwe sessie aanmaken
                </button>
            </div>
        </div>

        <div class="glassmorphism rounded-2xl p-6 md:p-8 card-hover">
            <div class="mb-6">
                <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">Deelnemen</h1>
                <p class="text-white/80 leading-relaxed">Doe mee met een bestaande sessie met de sessie-ID</p>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-white/90 text-sm font-semibold mb-2">Je naam</label>
                    <input type="text" id="joinUserNameInput" placeholder="Bijv. Jan de Vries"
                        class="w-full px-4 py-3 rounded-xl bg-white/10 backdrop-blur-lg border border-white/20 text-white placeholder-white/50 focus:bg-white/15 focus:border-violet-400 transition-all">
                </div>

                <div>
                    <label class="block text-white/90 text-sm font-semibold mb-2">Sessie-ID</label>
                    <input type="text" id="sessionIdInput" placeholder="Bijv. ABC123"
                        class="w-full px-4 py-3 rounded-xl bg-white/10 backdrop-blur-lg border border-white/20 text-white placeholder-white/50 focus:bg-white/15 focus:border-violet-400 transition-all uppercase tracking-widest">
                </div>

                <button id="joinSessionBtn"
                    class="w-full bg-gradient-to-r from-violet-500 to-fuchsia-600 text-white font-semibold py-4 px-6 rounded-xl hover:from-violet-600 hover:to-fuchsia-700 transform hover:scale-105 transition-all shadow-2xl">
                    Doe mee
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/index.js"></script>
}
